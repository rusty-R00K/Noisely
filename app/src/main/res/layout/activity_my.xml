<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d45b5b"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fire"
        android:background="@drawable/firepause"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/garden"
        android:background="@drawable/gardenpause"
        android:layout_above="@+id/rain"
        android:layout_alignLeft="@+id/stormrain"
        android:layout_alignStart="@+id/stormrain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rain"
        android:background="@drawable/rainpause"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fire"
        android:layout_alignLeft="@+id/fire"
        android:layout_alignStart="@+id/fire" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seaside"
        android:background="@drawable/seasidepause"
        android:layout_alignTop="@+id/rain"
        android:layout_alignLeft="@+id/garden"
        android:layout_alignStart="@+id/garden" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storm"
        android:background="@drawable/stormpause"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rain"
        android:layout_alignLeft="@+id/rain"
        android:layout_alignStart="@+id/rain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stormrain"
        android:background="@drawable/stormrainpause"
        android:layout_alignTop="@+id/storm"
        android:layout_alignLeft="@+id/water"
        android:layout_alignStart="@+id/water"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/night"
        android:background="@drawable/summernightpause"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/stormrain"
        android:layout_alignLeft="@+id/storm"
        android:layout_alignStart="@+id/storm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/water"
        android:background="@drawable/waterstreampause"
        android:layout_above="@+id/wind"
        android:layout_alignLeft="@+id/comingsoon"
        android:layout_alignStart="@+id/comingsoon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wind"
        android:background="@drawable/windpause"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/night"
        android:layout_alignLeft="@+id/night"
        android:layout_alignStart="@+id/night" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comingsoon"
        android:background="@drawable/comingsoon"
        android:layout_marginRight="40dp"
        android:layout_alignTop="@+id/wind"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
